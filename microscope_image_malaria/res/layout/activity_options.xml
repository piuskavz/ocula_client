<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OptionsActivity" >

    <TextView
        android:id="@+id/TxtView_IP_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    
    <TextView
        android:id="@+id/TxtView_IP_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP_Address" 
        android:layout_below="@+id/TxtView_IP_default"/>
    
    <EditText
        android:id="@+id/EditTxt_IP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtView_IP_default"
        android:layout_toRightOf="@+id/TxtView_IP_label"
        android:inputType="textUri" />
"
    
    <EditText
        android:id="@+id/EditTxt_Port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditTxt_IP"
        android:layout_toRightOf="@+id/TxtView_Port_label"
        android:inputType="number" />

    <TextView
        android:id="@+id/TxtView_Port_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EditTxt_Port"
        android:layout_alignBottom="@+id/EditTxt_Port"
        android:layout_alignLeft="@+id/TxtView_IP_label"
        android:text="Port_number" />
    
    <Button 
        android:id="@+id/Button_done"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_below="@+id/EditTxt_Port"/>"

</RelativeLayout>
